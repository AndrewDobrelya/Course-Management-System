@using CourseManagementSystem.Models

@model IEnumerable<Course>

@{
    ViewBag.Title = "Результаты поиска";
    var category = new ApplicationDbContext().Categories;
    var list = new SelectList(category, "id", "Name");
}

<h2>Результаты поиска  </h2><h4>по запросу: "@ViewBag.Keywords"</h4><br />

<div class="list-group col-md-2">
    <div class="list-group-item" style="background-color:#c4c4c4"><h4 class="list-group-item-heading">Категории</h4></div>
    @if(ViewBag.Category == 0)
    {
    @Html.ActionLink("<Все>", "Search", "Course", new Search { category_id = 0, keywords = ViewBag.Keywords }, new { @class = "list-group-item active" })
    }
    else
    {
    @Html.ActionLink("<Все>", "Search", "Course", new Search { category_id = 0, keywords = ViewBag.Keywords }, new { @class = "list-group-item" })
    }
    @foreach(var item in category) 
    {
        if(item.id != ViewBag.Category)
        {
             @Html.ActionLink(item.Name, "Search", "Course", new Search { category_id = item.id, keywords = ViewBag.Keywords }, new { @class="list-group-item" })
        }
        else
        {
            @Html.ActionLink(item.Name, "Search", "Course", new Search { category_id = item.id, keywords = ViewBag.Keywords }, new { @class="list-group-item active" })
        }
}


</div>
@if (Model.Count() > 0)
{
    <div class="col-md-10">
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th></th>
    </tr>

            @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.Author.FirstName).ToString() + " " + Html.DisplayFor(modelItem => item.Author.LastName).ToString(), "Usr", "Account", new { profile = item.Author.UserName }, null)
        </td>
        <td>
                        @Html.ActionLink("Подробнее", "View", new { id = item.id })
        </td>
    </tr>
}

</table>
    </div>
}
else
{
    
    <hr />
    <p style="color:#808080; text-align:center">
        Поиск не дал результатов</p>
}
