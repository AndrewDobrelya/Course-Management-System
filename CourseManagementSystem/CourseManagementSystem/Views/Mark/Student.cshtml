@using System.Web.Mvc.Html
@model IEnumerable<CourseManagementSystem.Models.Subscription>

@{
    ViewBag.Title = "Мои курсы";
}

<h2>Мои курсы</h2>


@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.name)
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Course.id })
                </td>
            </tr>
        }

    </table>
}
else
{

    <hr />
    <p style="color:#808080; text-align:center">
        У вас пока ещё нет курсов
    </p>
}

